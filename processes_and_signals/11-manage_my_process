#!/usr/bin/env bash
#Manage my process

FILE=/var/run/my_process.pid

start() {

	sudo touch "$FILE"
	./manage_my_process &
	echo $$ > "$FILE"
	echo "manage_my_process started"
}

stop() {

	sudo kill -15 $( cat $FILE ) && rm -f "$FILE"
	echo "manage_my_process stopped"
}

restart() {

	sudo kill -15 $( cat $FILE ) && rm -f "$FILE"
	./manage_my_process &
	sudo touch "$FILE"
	echo $$ > $FILE
	echo "manage_my_process restarted"
}

case $1 in 
	start) start;;
	stop) stop;;
	restart) restart;;
	*) echo "Usage: manage_my_process {start|stop|restart}"
esac
